{
    "name": "warp/vibe-html",
    "description": "A fluent, type-safe PHP library for building HTML documents using the DOM",
    "type": "library",
    "license": "MIT",
    "keywords": ["html", "dom", "builder", "fluent", "type-safe"],
    "authors": [
        {
            "name": "William"
        }
    ],
    "require": {
        "php": ">=8.4",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "pestphp/pest": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "VibeHtml\\": "src/VibeHtml/"
        },
        "files": [
            "src/VibeHtml/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
